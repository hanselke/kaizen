      expect(element('ng\\:view h2').text()).toMatch(/Signin/);
    });
    it('[MANUAL TEST] i should be able to sign in with a proper email and password', function() {
    });
    it('[MANUAL TEST] i should not be able to sign in with a wrong email or password', function() {
    });
  });

